// Uniform

uniform sampler2D mainTexture;
uniform sampler2D secondText;
uniform sampler2D thirdTexture;


// Sortie

out vec4 out_Color;


// Fonction main

void main()
{
    // Couleur du pixel

    gl_FragColor = texture2D(mainTexture, gl_TexCoord[0].st)
      + texture2D(secondText, gl_TexCoord[0].st)
      + texture2D(thirdTexture, gl_TexCoord[0].st)
      + gl_Color; 
}

